<?php 
// koneksi.php 
$host = "localhost"; 
$user = "root";     // default user XAMPP 
$pass = "";        
 // kosongkan kalau tidak ada password 
$db   = "json";     // nama database kamu 
$conn = mysqli_connect($host, $user, $pass, $db); 
if (!$conn) { 
die("Koneksi gagal: " . mysqli_connect_error()); 
} 
?>
